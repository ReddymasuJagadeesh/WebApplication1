@using System.Collections.Generic
@model WebApplication1.Models.StudentsIndexViewModel

@{
    ViewData["Title"] = "Students";
    var pageSize = Model?.PageSize ?? 3;
    var page = Model?.Page ?? 1;
    var totalPages = Model?.TotalPages ?? 1;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Students</h1>

    <div class="d-flex align-items-center" style="gap:.5rem;">
        <a asp-action="Create" class="btn btn-success">Add New Student</a>

        @* Delete All Students form (with antiforgery and confirm). Disabled when no students. *@
        @if ((Model?.TotalItems ?? 0) > 0)
        {
            <form asp-action="DeleteAll" method="post" style="display:inline-block; margin:0;">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-danger"
                        onsubmit="return false;"
                        onclick="return confirm('Are you sure you want to DELETE ALL students? This action cannot be undone.');">
                    Delete All Students
                </button>
            </form>
        }
        else
        {
            <button type="button" class="btn btn-danger" disabled title="No students to delete">Delete All Students</button>
        }
    </div>
</div>

@* Status message from DeleteAll or other actions *@
@if (TempData["StatusMessage"] != null)
{
    <div class="alert alert-info" role="alert">
        @TempData["StatusMessage"]
    </div>
}

<div class="mb-2">
    @if ((Model?.TotalItems ?? 0) > 0)
    {
        <small>
            Showing @(Model?.StartItem ?? 0) - @(Model?.EndItem ?? 0) of @(Model?.TotalItems ?? 0) students.
            @if ((Model?.RemainingItems ?? 0) > 0)
            {
                <span class="text-muted">(@(Model?.RemainingItems ?? 0) remaining)</span>
            }
        </small>
    }
    else
    {
        <small>No students available.</small>
    }
</div>

<table class="table table-striped">
    <thead class="table-dark">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Mobileno</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @{
            var students = Model?.Students ?? new List<WebApplication1.Models.Students>();
        }
        @foreach (var s in students)
        {
            <tr>
                <td>@s.Id</td>
                <td>@s.Name</td>
                <td>@s.Email</td>
                <td>@s.Mobileno</td>
                <td>
                    <a asp-action="Details" asp-route-id="@s.Id" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@s.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@s.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="d-flex align-items-center justify-content-between mt-3">
    <div>
        @* Pagination: only render page links if more than one page *@
        @if (totalPages > 1)
        {
            <nav aria-label="Students pagination" class="d-inline-block">
                <ul class="pagination mb-0">
                    @{
                        var prevDisabled = page <= 1;
                        var nextDisabled = page >= totalPages;
                    }

                    <li class="page-item @(prevDisabled ? "disabled" : "")">
                        @if (prevDisabled)
                        {
                            <span class="page-link">Previous</span>
                        }
                        else
                        {
                            <a class="page-link" asp-action="Index" asp-route-page="@(page - 1)" asp-route-pageSize="@pageSize">Previous</a>
                        }
                    </li>

                    @for (var p = 1; p <= totalPages; p++)
                    {
                        <li class="page-item @(p == page ? "active" : "")">
                            @if (p == page)
                            {
                                <span class="page-link">@p</span>
                            }
                            else
                            {
                                <a class="page-link" asp-action="Index" asp-route-page="@p" asp-route-pageSize="@pageSize">@p</a>
                            }
                        </li>
                    }

                    <li class="page-item @(nextDisabled ? "disabled" : "")">
                        @if (nextDisabled)
                        {
                            <span class="page-link">Next</span>
                        }
                        else
                        {
                            <a class="page-link" asp-action="Index" asp-route-page="@(page + 1)" asp-route-pageSize="@pageSize">Next</a>
                        }
                    </li>
                </ul>
            </nav>
        }
    </div>

    <div>
        @* Always show the display control and Show button *@
        <form asp-action="Index" method="get" class="d-flex align-items-center" role="search" style="gap:.5rem;">
            <label class="mb-0">Display</label>
            <input type="number" name="pageSize" class="form-control" style="width:90px" min="1" max="100" value="@(pageSize)" />
            <input type="hidden" name="page" value="1" />
            <button type="submit" class="btn btn-outline-primary">Show</button>
        </form>
    </div>
</div>
